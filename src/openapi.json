{
  "openapi": "3.0.0",
  "info": {
    "title": "Guardian API",
    "version": "1.0.0",
    "description": "API documentation for the Guardian Monitoring App"
  },
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["fullname", "email", "password", "role"],
                "properties": {
                  "fullname": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Log in a user",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/v1/admin/support-ticket": {
      "post": {
        "summary": "Create a support ticket",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject", "description"],
                "properties": {
                  "subject": { "type": "string" },
                  "description": { "type": "string" },
                  "status": { "type": "string", "default": "open" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Support ticket created successfully" },
          "500": { "description": "Error creating support ticket" }
        }
      }
    },
    "/api/v1/admin/tasks": {
      "post": {
        "summary": "Create a new task",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "description", "patientId", "dueDate"],
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "patientId": { "type": "string" },
                  "dueDate": { "type": "string", "format": "date" },
                  "assignedTo": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Task created successfully" },
          "500": { "description": "Error creating task" }
        }
      }
    },
    "/api/v1/caretaker/assigned-patients": {
      "get": {
        "summary": "Fetch patients assigned to a caretaker",
        "tags": ["Caretaker"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of assigned patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Patient" }
                }
              }
            }
          },
          "403": { "description": "Unauthorized role" },
          "500": { "description": "Error fetching assigned patients" }
        }
      }
    },
    "/api/v1/health-records/{patientId}": {
      "get": {
        "summary": "Fetch health records for a patient",
        "tags": ["HealthRecord"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the patient"
          }
        ],
        "responses": {
          "200": {
            "description": "Health records retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/HealthRecord" }
                }
              }
            }
          },
          "404": { "description": "Patient not found" },
          "500": { "description": "Error fetching health records" }
        }
      }
    },
    "/api/v1/nurse/assigned-patients": {
      "get": {
        "summary": "Fetch patients assigned to a nurse",
        "tags": ["Nurse"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of assigned patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Patient" }
                }
              }
            }
          },
          "403": { "description": "Unauthorized role" },
          "500": { "description": "Error fetching assigned patients" }
        }
      }
    },
    "/api/v1/user/profile": {
      "get": {
        "summary": "Fetch user profile",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Error fetching user profile" }
        }
      }
    },
    "/api/v1/admin/bootstrap": {
      "post": {
        "summary": "Bootstrap the first organization and admin user",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminBootstrapRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Admin and org bootstrapped" },
                    "admin": { "$ref": "#/components/schemas/AdminSafe" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Problem" }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Problem" }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Patient": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "fullname": { "type": "string" },
          "age": { "type": "integer" },
          "gender": { "type": "string" },
          "caretaker": { "type": "string" },
          "assignedNurses": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "HealthRecord": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "patientId": { "type": "string" },
          "recordType": { "type": "string" },
          "description": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "fullname": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" }
        }
      },
      "AdminBootstrapRequest": {
        "type": "object",
        "required": ["orgName", "fullName", "email", "password"],
        "properties": {
          "orgName": { "type": "string", "example": "Gopher Industries" },
          "fullName": { "type": "string", "example": "Alex Admin" },
          "email": { "type": "string", "format": "email", "example": "alex.admin@example.test" },
          "password": { "type": "string", "format": "password", "minLength": 8, "example": "Admin#1234" }
        }
      },
      "AdminSafe": {
        "type": "object",
        "description": "Admin user without sensitive fields",
        "properties": {
          "_id": { "type": "string", "example": "68a2e98a605bf088aff263ce" },
          "fullName": { "type": "string", "example": "Alex Admin" },
          "email": { "type": "string", "format": "email", "example": "alex.admin@example.test" },
          "role": { "type": "string", "enum": ["admin", "nurse", "caretaker", "patient"], "example": "admin" },
          "org": { "type": "string", "example": "68a2e98a605bf088aff263c8" },
          "isApproved": { "type": "boolean", "example": true }
        }
      },
      "Problem": {
        "type": "object",
        "required": ["status", "title"],
        "properties": {
          "type": { "type": "string", "format": "uri", "example": "about:blank" },
          "title": { "type": "string", "example": "Unauthorized" },
          "status": { "type": "integer", "example": 401 },
          "detail": { "type": "string", "example": "Missing or invalid credentials." },
          "instance": { "type": "string", "example": "/api/v1/admin/bootstrap" }
        }
      },
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "code": { "type": "string", "example": "E_CONFLICT" },
          "message": { "type": "string", "example": "Admin already bootstrapped." },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string", "example": "email" },
                "message": { "type": "string", "example": "Email already in use." }
              }
            }
          }
        }
      }
    }
  }
}
