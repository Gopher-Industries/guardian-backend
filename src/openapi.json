{
  "openapi": "3.0.0",
  "info": {
    "title": "Guardian API",
    "version": "1.0.0",
    "description": "API documentation for the Guardian Monitoring App"
  },
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["fullname", "email", "password", "role"],
                "properties": {
                  "fullname": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Log in a user",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/v1/admin/support-ticket": {
      "post": {
        "summary": "Create a support ticket",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject", "description"],
                "properties": {
                  "subject": { "type": "string" },
                  "description": { "type": "string" },
                  "status": { "type": "string", "default": "open" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Support ticket created successfully" },
          "500": { "description": "Error creating support ticket" }
        }
      }
    },
    "/api/v1/admin/tasks": {
      "post": {
        "summary": "Create a new task",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "description", "patientId", "dueDate"],
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "patientId": { "type": "string" },
                  "dueDate": { "type": "string", "format": "date" },
                  "assignedTo": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Task created successfully" },
          "500": { "description": "Error creating task" }
        }
      }
    },
    "/api/v1/caretaker/assigned-patients": {
      "get": {
        "summary": "Fetch patients assigned to a caretaker",
        "tags": ["Caretaker"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of assigned patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Patient" }
                }
              }
            }
          },
          "403": { "description": "Unauthorized role" },
          "500": { "description": "Error fetching assigned patients" }
        }
      }
    },
    "/api/v1/health-records/{patientId}": {
      "get": {
        "summary": "Fetch health records for a patient",
        "tags": ["HealthRecord"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the patient"
          }
        ],
        "responses": {
          "200": {
            "description": "Health records retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/HealthRecord" }
                }
              }
            }
          },
          "404": { "description": "Patient not found" },
          "500": { "description": "Error fetching health records" }
        }
      }
    },
    "/api/v1/nurse/assigned-patients": {
      "get": {
        "summary": "Fetch patients assigned to a nurse",
        "tags": ["Nurse"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of assigned patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Patient" }
                }
              }
            }
          },
          "403": { "description": "Unauthorized role" },
          "500": { "description": "Error fetching assigned patients" }
        }
      }
    },
    "/api/v1/user/profile": {
      "get": {
        "summary": "Fetch user profile",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Error fetching user profile" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Patient": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "fullname": { "type": "string" },
          "age": { "type": "integer" },
          "gender": { "type": "string" },
          "caretaker": { "type": "string" },
          "assignedNurses": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "HealthRecord": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "patientId": { "type": "string" },
          "recordType": { "type": "string" },
          "description": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "fullname": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" }
        }
      }
    }
  }
}